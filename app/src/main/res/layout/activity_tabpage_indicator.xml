<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kevin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>
    <Button
        android:id="@+id/tabpage_act_btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="change mode" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <com.kevin.tabindicator.TabPageIndicator
            android:id="@+id/tabpage_act_tpi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/tabbg"
            kevin:tabTextSize="12sp"
            kevin:tabSelectedIcons="@array/qq_selected_icon"
            kevin:tabUnselectedIcons="@array/qq_normal_icon" />
    </FrameLayout>

</LinearLayout>